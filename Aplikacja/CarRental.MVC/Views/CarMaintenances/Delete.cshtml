@model CarRental.Shared.DTO.CarMaintenanceDTO

<h1>Delete Car Maintenance</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car Maintenance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Car Brand
        </dt>
        <dd class="col-sm-10">
            @Model.CarBrand
        </dd>
        <dt class="col-sm-2">
            Car Model
        </dt>
        <dd class="col-sm-10">
            @Model.CarModel
        </dd>
        <dt class="col-sm-2">
            Service Date
        </dt>
        <dd class="col-sm-10">
            @Model.ServiceDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Cost
        </dt>
        <dd class="col-sm-10">
            @Model.Cost
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CarMaintenanceId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
@model IEnumerable<CarRental.Shared.DTO.CarDTO>

<h1>Cars</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add new car</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Rental Price</th>
            <th>Availability</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.CarId</td>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.RentalPrice</td>
                <td>@car.AvailabilityStatus</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@car.CarId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@car.CarId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

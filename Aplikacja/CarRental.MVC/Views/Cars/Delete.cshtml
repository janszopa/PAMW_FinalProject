@model CarRental.Shared.DTO.CarDTO

<h1>Delete Car</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Rental Price</dt>
        <dd class="col-sm-10">@Model.RentalPrice</dd>

        <dt class="col-sm-2">Availability Status</dt>
        <dd class="col-sm-10">@Model.AvailabilityStatus</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="CarId" />
    <input type="submit" value="Delete" class="btn btn-danger mt-3" />
    <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancel</a>
</form>

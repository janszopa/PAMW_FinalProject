@model CarRental.Shared.DTO.RentalDTO

<h1>Delete Rental</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Car Brand
        </dt>
        <dd class="col-sm-10">
            @Model.CarBrand
        </dd>
        <dt class="col-sm-2">
            Car Model
        </dt>
        <dd class="col-sm-10">
            @Model.CarModel
        </dd>
        <dt class="col-sm-2">
            Customer First Name
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerFirstName
        </dd>
        <dt class="col-sm-2">
            Customer Last Name
        </dt>
        <dd class="col-sm-10">
            @Model.CustomerLastName
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Total Price
        </dt>
        <dd class="col-sm-10">
            @Model.TotalPrice
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RentalId" />
        <button type="submit" class="btn btn-danger mt-3">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>